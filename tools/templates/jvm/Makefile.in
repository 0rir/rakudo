@bpv(CLEANUPS)@ = \
  $(RUNTIME_JAR) \
  perl6-eval-server \
  perl6-jdb-server \
  eval-client.pl

@bpv(ML_EXTRA)@ = @nfp(src/vm/jvm/Perl6/JavaModuleLoader.nqp)@
@bpv(PERL6_DEPS_EXTRA)@ = $(RUNTIME_JAR)

@bpv(COMPILER_OPTS_EXTRA)@ = --javaclass=perl6

@bpv(HARNESS_TYPE)@ = 5

